            },
            {
              "id": 522194,
              "key": "790f71fd-ead1-44d2-9bb2-20b9a2ddcfbc",
              "title": null,
              "semantic_type": "TextAtom",
              "is_public": true,
              "text": "Consider the following set of equations:\n\n",
