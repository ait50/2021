            {
              "id": 522196,
              "key": "f6c4bb49-6dac-402a-aeb0-ebcbfb403670",
              "title": "What is the solution for a and b?",
              "semantic_type": "RadioQuizAtom",
              "is_public": true,
              "instructor_notes": null,
              "user_state": {
                "node_key": "f6c4bb49-6dac-402a-aeb0-ebcbfb403670",
